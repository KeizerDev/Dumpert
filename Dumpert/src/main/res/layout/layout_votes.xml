<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voteLayout"
    android:rowCount="1"
    android:columnCount="4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:layout_scrollFlags="scroll|enterAlways">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/upvote"
        android:src="@drawable/ic_upvote"
        android:contentDescription="@string/placeholder_icon"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/downvote"
        android:src="@drawable/ic_downvote"
        android:contentDescription="@string/placeholder_icon"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/comment"
        android:src="@drawable/ic_comment"
        android:contentDescription="@string/placeholder_icon" />

    <TextView
        android:id="@+id/votes"
        android:text="@string/placeholder_string"
        android:drawableRight="@drawable/ic_votes"
        android:drawableEnd="@drawable/ic_votes"
        android:drawablePadding="8dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</GridLayout>
