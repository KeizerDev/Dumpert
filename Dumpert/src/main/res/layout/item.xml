<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_master_frame"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_frame"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/item_image"
            android:contentDescription="@string/placeholder_icon"
            android:background="@color/gray_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_type"
            android:src="@drawable/ic_play_circle_fill"
            android:contentDescription="@string/placeholder_icon"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/item_loading"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_video_frame"
        android:contentDescription="@string/placeholder_icon"
        android:alpha="0"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <VideoView
            android:id="@+id/item_video"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="200dp" />

    </FrameLayout>

</FrameLayout>
