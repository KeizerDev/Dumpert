<resources>

    <style name="Theme.Dumpert" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/green_800</item>
    </style>

    <style name="Theme.Dumpert.Drawer" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/green_800</item>
        <item name="windowActionBar">false</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <style name="Theme.Dumpert.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/green_800</item>
    </style>

    <style name="Theme.Dumpert.About" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/about</item>
        <item name="colorPrimaryDark">@color/about_dark</item>
        <item name="colorAccent">@color/about_button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Dumpert.Fullscreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
